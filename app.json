{
  "name": "Run Playwright Script",
  "scripts": {
    "start": "node index.js"
  },
  "env": {
    "NPM_CONFIG_PRODUCTION": "false",
    "NODE_ENV": "production",
    "PLAYWRIGHT_BROWSERS_PATH": "0"
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/mxschmitt/heroku-playwright-buildpack"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ]
}
